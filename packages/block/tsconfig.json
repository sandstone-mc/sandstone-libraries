{
	"compilerOptions": {
	  "declaration": true,
	  "module": "NodeNext",
	  "moduleResolution": "NodeNext",
	  "target": "ESNext",
	  "lib": [
		"ESNext"
	  ],
	  "strict": true,
	  "esModuleInterop": true,
	  "resolveJsonModule": true,
	  "allowSyntheticDefaultImports": true,
	  "noEmit": false,
	  "skipLibCheck": true,
	  "outDir": "dist",
	  "forceConsistentCasingInFileNames": true 
	},
	"ts-node": {
	  "esm": true
	},
	"include": [
	  "src"
	]
  }